{
  "name": "gaigai-vscode",
  "displayName": "Gaigai",
  "description": "Language support and runner command for Gaigai.",
  "version": "0.1.0",
  "publisher": "local",
  "license": "UNLICENSED",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:gaigai",
    "onCommand:gaigai.runCurrentFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gaigai",
        "aliases": [
          "Gaigai",
          "gaigai"
        ],
        "extensions": [
          ".gaigai",
          ".gai",
          ".gg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gaigai",
        "scopeName": "source.gaigai",
        "path": "./syntaxes/gaigai.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "gaigai",
        "path": "./snippets/gaigai.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "gaigai.runCurrentFile",
        "title": "Gaigai: Run Current File"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "gaigai.runCurrentFile",
          "when": "editorLangId == gaigai",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "generate:builtins": "node ./scripts/extract-builtins.mjs",
    "compile": "npm run generate:builtins && tsc -p ./",
    "watch": "npm run generate:builtins && tsc -watch -p ./",
    "test:unit": "node ./scripts/test-unit.mjs",
    "test:smoke": "node ./scripts/test-smoke.mjs",
    "test": "npm run compile && npm run test:unit && npm run test:smoke",
    "package": "npm run compile && npx @vscode/vsce package --no-yarn --allow-missing-repository",
    "check": "npm run test"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.2"
  },
  "files": [
    "out/**",
    "syntaxes/**",
    "snippets/**",
    "src/generated/builtins.json",
    "language-configuration.json",
    "gaigai.js",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.txt"
  ]
}
